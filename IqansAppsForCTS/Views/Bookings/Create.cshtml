                @Html.DropDownListFor(model => model.RoomNumber, new List<SelectListItem> {
                       new SelectListItem { Value = "2C1" , Text = "2C1 - VC room" },
                       new SelectListItem { Value = "2C2" , Text = "2C1 - Meeting Room" }
